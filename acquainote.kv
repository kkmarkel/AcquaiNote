#: kivy 2.0.0

<MainScreen>:

    FloatLayout:
        pos: 0, 0
        size: root.width, root.height

        GridLayout:
            cols: 2
            pos_hint: {'x': .3, 'y': .3}
            size_hint: None, None
            size: root.width * .4, root.width * .4       # we want a square, not a distorted rectangle

            Button:
                text: "Button 1"
            Button:
                text: "Button 2"
            Button:
                text: "Button 3"
            Button:
                text: "Button 4"